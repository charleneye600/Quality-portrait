/* pages/mine/mine.wxss */
page{
  margin:0;
  padding:0;
  background-color: #F9F9F9;
}
.bg{
  height:330rpx;
  width:100%;
  background-color:#2574FF ;
  display: flex;
  /* justify-content: center;align-items: center;同时使用可以使元素处于正中间 */
  /* 垂直方向的居中 */
  justify-content: center;
  /* 水平方向的居中 */
  align-items: center;
  /* 所有元素都垂直居中 */
  flex-direction: column;
}
.userAvatar{
  width:180rpx;
  height:180rpx;
  border-radius: 100%;
  overflow: hidden;
}
.nav{
  display:flex;
  justify-content: space-around;
  padding:5rpx auto;
  margin-top:-5rpx;
  margin-bottom: 20rpx;
  background-color: #ffffff;
  box-shadow:0 0 15rpx rgba(0,0,0,0.1)
}
.nav-item{
  width:140rpx;
  height:100rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  /* margin:10rpx;
  border-right:1rpx solid rgba(0,0,0,0.1); */
}
.nav-item:last-child{
  border:10;
}
.nav-item .icon{
  width:60rpx;
  height:60rpx;
  margin:0 auto;
}
.nav-item .icon image{
  width:100%;
  height:100%;
}
.title{
  font-size:28rpx;
  /* color:#8799a3; */
}
