/* pages/user/user.wxss */
pages{
  background-color: #F9F9F9;
}
#user{
  width:100%;
  height:380rpx;
}
.nav{
  display:flex;
  justify-content: center;
  padding:5rpx 0;
  margin-top:-5rpx;
  background-color: #ffffff;
  box-shadow:0 0 15rpx rgba(0,0,0,0.1)
}
.nav-item{
  width:140rpx;
  height:100rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-right:1rpx solid rgba(0,0,0,0.1);
}
.nav-item:last-child{
  border:0;
}
.nav-item .icon{
  width:60rpx;
  height:60rpx;
  margin:0 auto;
}
.nav-item .icon image{
  width:100%;
  height:100%;
}
.nav-item .text{
  font-size:26rpx;
  color:#8799a3;
}
.tab{
  margin:25rpx 25rpx 0;
  background-color: #ffffff;
  min-height: 500rpx;
}
.value{
  color:red;
}
.text{
  color:blueviolet;
}